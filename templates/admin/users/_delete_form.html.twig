<form method="post" action="{{ path('admin_user_delete', {'id': admin.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur admin ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin.id) }}">
    <button class="btn btn-xs btn-danger"><i class="fa fa-trash" data-bs-toggle="tooltip" title="Supprimer"></i></button>
</form>
