{{ form_start(form) }}
{% if not form.vars.valid %}
    <div class="alert alert-danger">
        {{ form_errors(form) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>
{% endif %}

<div class="form-row row">
    <div class="form-group col-12">
        {{ form_row(form.email, {'attr': {'class': 'form-control','placeholder': 'e-mail'}}) }}
    </div>
    <div class="form-group col-6">
        {{ form_label(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control','placeholder': 'Mot de passe'}}) }}
    </div>
    <div class="form-group col-6">
        {{ form_label(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control','placeholder': 'Retapez le mot de passe'}}) }}
    </div>
    <div class="form-group col-12">
        {{ form_row(form.roles, {'attr': {'class': 'form-check-control'}}) }}
    </div>

    <div class="form-group d-flex col-md-12 justify-content-end">
        <div class="form-check form-switch">
            {{ form_row(form.enabled, {'attr': {'class': 'form-check-input'}}) }}
        </div>
    </div>



</div>

<div class="text-end">
    <button class="btn btn-success">{{ button_label|default('Enregistrer')|trans }}</button>
</div>
{{ form_end(form) }}
